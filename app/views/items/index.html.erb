<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.user_id %></td>
        <td><%= link_to 'Show', item %></td>
        <% if policy(item).edit? %>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <% end %>
        <% if policy(item).destroy? %>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if policy(Item).new? %>
  <%= link_to "New item", new_item_path %>
<% end %>

