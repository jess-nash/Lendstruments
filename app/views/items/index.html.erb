<p id="notice"><%= notice %></p>

<h1>Items</h1>


  <div class="cards">
    <% @items.each do |item| %>
    <%= link_to item do %>
    <div class="card-pick">
       <%= cl_image_tag item.photo.key, height: 300, width: 400, crop: :fill %>
      <div class="card-pick-info">
        <h2><%= item.name %></h2>
        <h3><%= item.user.username %></h3>
        <p><%= item.details %></p>
      </div>
        <% if policy(item).edit? %>
            <p><%= link_to 'Edit', edit_item_path(item) %></p>
          <% end %>
          <% if policy(item).destroy? %>
            <p><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          <% end %>
      <% end %>
    </div>
    <% end %>
  </div>

<br>

<% if policy(Item).new? %>
  <%= link_to "New item", new_item_path %>
<% end %>

<%= link_to "Home", root_path %>
